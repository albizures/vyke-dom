{
	"name": "@vyke/dom",
	"type": "module",
	"version": "0.0.1",
	"packageManager": "pnpm@8.11.0",
	"description": "",
	"author": "Jose Albizures <jose@albizures.com> (https://albizures.com/)",
	"license": "MIT",
	"keywords": [
		"helpers",
		"typescript"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "run-s build:*",
		"build:dist": "unbuild",
		"build:docs": "tsdocs",
		"test": "run-s test:unit test:types test:lint",
		"test:use": "knip",
		"test:lint": "eslint .",
		"test:unit": "vitest run",
		"test:unit:dev": "vitest",
		"test:types": "tsc --noEmit",
		"release:bump": "standard-version -t v",
		"release:publish": "pnpm publish --access public",
		"release:push-tags": "git push --follow-tags origin main",
		"release": "run-s test build release:bump release:publish release:push-tags"
	},
	"peerDependencies": {
		"@vyke/results": "^0.1.*"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^2.6.2",
		"@testing-library/jest-dom": "^6.2.0",
		"@vyke/results": "^0.1.0",
		"@vyke/tsdocs": "^0.0.5",
		"eslint": "^8.56.0",
		"jsdom": "^23.2.0",
		"knip": "^3.13.2",
		"npm-run-all": "^4.1.5",
		"standard-version": "^9.5.0",
		"terser": "^5.26.0",
		"typescript": "^5.3.3",
		"unbuild": "^2.0.0",
		"vitest": "^1.2.0"
	},
	"standard-version": {
		"skip": {
			"changelog": true
		}
	}
}
